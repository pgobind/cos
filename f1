# Reconciliation process configuration file
name: ReconciliationProcess

# Define the input and output paths
input_path: s3://input-bucket/input/path
output_path: s3://output-bucket/output/path

# Define the first reconciliation job
- name: Job1
  type: Spark
  class: com.example.Job1
  input_path: ${input_path}/job1
  output_path: ${output_path}/job1
  schedule: "0 0 * * *"
  compare_columns:
    - col1
    - col2
    - col3
  additional_parameters:
    - param1: value1
    - param2: value2

# Define the second reconciliation job
- name: Job2
  type: Hive
  script_path: s3://scripts-bucket/scripts/job2.hql
  input_path: ${input_path}/job2
  output_path: ${output_path}/job2
  schedule: "0 0 */2 * *"
  compare_columns:
    - col4
    - col5
    - col6
  additional_parameters:
    - param3: value3
    - param4: value4
