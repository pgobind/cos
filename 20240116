SELECT 
    sub.colm1, 
    sub.colm2, 
    sub.group_count, 
    sub.other_columns
FROM (
    SELECT 
        colm1, 
        colm2, 
        COUNT(*) OVER (PARTITION BY colm1, colm2) as group_count,
        ROW_NUMBER() OVER (ORDER BY colm1, colm2) as rn,
        other_columns
    FROM 
        T
    -- Include WHERE conditions here if necessary
) sub
WHERE 
    sub.rn > :offset AND sub.rn <= :offset + :pageSize;
